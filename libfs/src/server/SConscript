Import('buildEnv')
Import('rpcLibrary')
Import('chunkstoreLibrary')
Import('lockservLibrary')
Import('commonLibrary')

localBuildEnv = buildEnv.Clone()
libLocalBuildEnv = buildEnv.Clone()

lib_target = 'fss'
lib_sources = [
               '../dpo/base/server/hlckmgr.cc',
               '../dpo/base/server/lckmgr.cc',
               '../dpo/base/server/smgr.cc',
               'handler.cc',
               'namespace.cc'
              ]

fssLibrary = libLocalBuildEnv.SharedLibrary(target = lib_target, source = lib_sources)

localBuildEnv.Append(LIBS = fssLibrary)
localBuildEnv.Append(LIBS = rpcLibrary)
localBuildEnv.Append(LIBS = chunkstoreLibrary)
localBuildEnv.Append(LIBS = commonLibrary)
localBuildEnv.Append(LIBS = ['pthread', 'rt'])
localBuildEnv.Program('fsserver', ['main.cc']) 

Return('fssLibrary')
