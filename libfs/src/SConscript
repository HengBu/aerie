import os, sys
Import('mainEnv')

buildEnv = mainEnv.Clone()
buildEnv.Append(CPPDEFINES = ['-D__STDC_FORMAT_MACROS'])
buildEnv.Append(CPPPATH = ['#src'])
buildEnv.Append(LIBS = ['config'])

Export('buildEnv')

rpcLibrary, ipcClientLibrary, ipcServerLibrary = SConscript('ipc/SConscript')
Export('rpcLibrary')
Export('ipcClientLibrary')
Export('ipcServerLibrary')
spaLibrary = SConscript('spa/SConscript')
Export('spaLibrary')
commonLibrary = SConscript('common/SConscript')
Export('commonLibrary')
lockservLibrary = SConscript('lockserv/SConscript')
Export('lockservLibrary')
mfsClientLibrary, mfsServerLibrary = SConscript('mfs/SConscript')
Export('mfsClientLibrary')
Export('mfsServerLibrary')
fscLibrary = SConscript('client/SConscript')
Export('fscLibrary')
fssLibrary = SConscript('server/SConscript')
Export('fssLibrary')
SConscript('pxfs/SConscript')
